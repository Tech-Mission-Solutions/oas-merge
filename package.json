{
  "name": "@tms/oas-merge",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/oas-merge.git"
  },
  "version": "1.0.0",
  "description": "Selectively merge OpenAPI schemas via CLI or Config",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
