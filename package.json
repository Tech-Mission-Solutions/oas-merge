    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.30.2",
  "dependencies": {
    "@readme/openapi-parser": "^5.5.0",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "openapi-format": "^1.29.4",
    "openapi-merge": "^1.3.3",
    "openapi-types": "^12.1.3",
    "outmatch": "^1.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
